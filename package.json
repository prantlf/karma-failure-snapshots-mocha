{
  "name": "karma-failure-snapshots-mocha",
  "version": "0.0.2",
  "main": "lib/index.js",
  "description": "Karma plugin for taking snapshots of the web browser whenever a Mocha test fails.",
  "license": "MIT",
  "author": {
    "name": "Ferdinand Prantl",
    "email": "prantlf@gmail.com",
    "url": "https://github.com/prantlf"
  },
  "keywords": [
    "karma-plugin",
    "karma-adapter",
    "mocha",
    "snapshots",
    "screenshots"
  ],
  "homepage": "https://github.com/prantlf/karma-failure-snapshots-mocha",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/karma-failure-snapshots-mocha"
  },
  "bugs": {
    "url": "https://github.com/prantlf/karma-failure-snapshots-mocha/issues"
  },
  "github": "https://github.com/prantlf/karma-failure-snapshots-mocha",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "standard --fix --verbose"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "standard": "17.0.0"
